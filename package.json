{
    "$schema": "https://json.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "workspaces": [
        "resources/ts/tests/e2e",
        "resources/ts/Components/ui"
    ],
    "scripts": {
        "build": "vite build",
        "dev": "vite",
        "test": "vitest",
        "test:unit": "vitest",
        "test:unit:watch": "vitest --watch",
        "test:unit:coverage": "vitest --coverage",
        "test:unit:ui": "vitest --ui",
        "test:watch": "vitest --watch",
        "test:coverage": "vitest --coverage",
        "test:e2e": "playwright test -c resources/ts/tests/e2e/playwright.config.ts",
        "test:e2e:ui": "playwright test -c resources/ts/tests/e2e/playwright.config.ts --ui",
        "test:e2e:debug": "playwright test -c resources/ts/tests/e2e/playwright.config.ts --debug",
        "test:e2e:headed": "playwright test -c resources/ts/tests/e2e/playwright.config.ts --headed",
        "test:e2e:chrome": "playwright test -c resources/ts/tests/e2e/playwright.config.ts --project=chromium",
        "test:e2e:auth": "playwright test -c resources/ts/tests/e2e/playwright.config.ts --project=chromium-no-auth",
        "test:e2e:report": "playwright show-report",
        "test:e2e:setup": "playwright test -c resources/ts/tests/e2e/playwright.config.ts --project=setup-admin --project=setup-teacher --project=setup-student",
        "test:e2e:admin": "playwright test -c resources/ts/tests/e2e/playwright.config.ts --project=admin",
        "test:e2e:teacher": "playwright test -c resources/ts/tests/e2e/playwright.config.ts --project=teacher",
        "test:e2e:student": "playwright test -c resources/ts/tests/e2e/playwright.config.ts --project=student",
        "test:all": "npm run test:unit && npm run test:e2e",
        "playwright:install": "playwright install"
    },
    "devDependencies": {
        "@tailwindcss/vite": "^4.1.13",
        "@testing-library/dom": "^10.4.1",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/node": "^25.0.3",
        "@vitejs/plugin-react": "^5.0.3",
        "@vitest/coverage-v8": "^4.0.16",
        "@vitest/ui": "^4.0.16",
        "axios": "^1.11.0",
        "concurrently": "^9.0.1",
        "jsdom": "^27.4.0",
        "laravel-vite-plugin": "^2.0.0",
        "ts-node": "^10.9.2",
        "vite": "^7.0.4",
        "vitest": "^4.0.16"
    },
    "dependencies": {
        "@dnd-kit/core": "^6.3.1",
        "@dnd-kit/sortable": "^10.0.0",
        "@dnd-kit/utilities": "^3.2.2",
        "@heroicons/react": "^2.2.0",
        "@inertiajs/react": "^2.1.6",
        "@types/react": "^19.1.13",
        "@types/react-dom": "^19.1.9",
        "easymde": "^2.20.0",
        "immer": "^11.1.0",
        "katex": "^0.16.23",
        "prismjs": "^1.30.0",
        "react": "^19.1.1",
        "react-dom": "^19.1.1",
        "react-markdown": "^10.1.0",
        "rehype-katex": "^7.0.1",
        "rehype-prism-plus": "^2.0.1",
        "remark-gfm": "^4.0.1",
        "remark-math": "^6.0.0",
        "typescript": "^5.9.2",
        "ziggy-js": "^2.6.0",
        "zod": "^4.1.12",
        "zustand": "^5.0.8"
    }
}
